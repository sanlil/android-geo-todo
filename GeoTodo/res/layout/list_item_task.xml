<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    
    
    <LinearLayout
        android:id="@+id/right_linear_layout"
	    android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		android:orientation="horizontal">

	    <CheckBox
	        android:id="@+id/task_list_item_solved"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="center" />

	    <ImageView
	        android:id="@+id/task_delete_button"
	        android:layout_width="36dp"
	        android:layout_height="36dp"
	        android:padding="4dp"
	        android:src="@drawable/ic_delete_black_36dp" />

    </LinearLayout>	    
    
    <TextView
        android:id="@+id/task_list_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/right_linear_layout"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:text="Title placeholder"
        android:textSize="18sp" />
</RelativeLayout>

