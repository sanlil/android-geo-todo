<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    
    
    <LinearLayout
        android:id="@+id/right_linear_layout"
	    android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		android:orientation="horizontal">

	    <CheckBox
	        android:id="@+id/task_list_item_solved"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="center" />

	    <ImageView
	        android:id="@+id/task_delete_button"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:padding="4dp"
	        android:src="@drawable/ic_delete_black_36dp" />

    </LinearLayout>	    
    
    <TextView
        android:id="@+id/task_list_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/right_linear_layout"
        android:gravity="center_vertical"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingLeft="16dp"
        android:text="Title placeholder"
        android:textSize="18sp" />

</RelativeLayout>

